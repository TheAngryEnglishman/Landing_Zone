<canvas id="venom-particles"></canvas>

<section class="projects-first-section">

    <div class="projects-info">
        <h1>{{labels.projects.title}}</h1>
        <p>{{labels.projects.subtitle}}</p>

        <div class="projects-code-links">
            <a
                href="https://github.com/TheAngryEnglishman"
                target="blank"
            >GitHub</a>
        </div>
    </div>

    <div class="perspective">
        <ul class="container">
            {{#projects}}
                <li class="{{class}}">
                    <a href="/{{outputFileName}}">
                        <img
                            src="/assets/{{cover.default}}"
                            class="grid-image default"
                        />
                        <img
                            src="/assets/{{cover.hover}}"
                            class="grid-image hover"
                        />
                    </a>
                </li>
            {{/projects}}
        </ul>
    </div>
</section>
<hr class="divider" />
<section class="projects-second-section">
    {{#each projects}}
        <a href="/{{outputFileName}}">
            <article class="{{id}} project-con">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                <div class="icon-con"></div>
                <img src="/assets/{{cover.default}}" />
            </article>
        </a>
        <hr class="divider" />
    {{/each}}

</section>

